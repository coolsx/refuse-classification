.searchInp {
    margin: 40rpx auto 60rpx;
    width: 600rpx;
    height: 80rpx;
    background: #fff;
    border-radius: 45rpx;
    border: 2rpx solid #1aad16;
    overflow: hidden;
}

.searchInp image:nth-child(1) {
    float: left;
    margin-left: 30rpx;
    margin-top: 20rpx;
    width: 45rpx;
    height: 45rpx;
}

.searchInp image:nth-child(3) {
    float: right;
    padding: 26rpx 30rpx 30rpx 0;
    width: 28rpx;
    height: 28rpx;
}

.searchInp input {
    float: left;
    margin-left: 20rpx;
    width: 420rpx;
    height: 80rpx;
    font-size: 32rpx;
    border: none;
    background: none;
}

.alwaysList {
    margin: 0 20rpx;
    padding-top: 20rpx;
    border-top: 2rpx solid #e4e4e4;
    overflow: hidden;
}

.cyKeyWord {
    float: left;
    margin: 20rpx 15rpx;
    padding: 16rpx 18rpx;
    font-size: 30rpx;
    line-height: 1;
    color: #fff;
    border-radius: 80rpx;
    background: #1aad16;
}

.showResultList {
    position: absolute;
    top: 180rpx;
    left: 0;
    width: 100%;
    background: #fff;
    overflow: hidden;
}

.showResultList view {
    margin: 0 30rpx;
    display: flex;
    border-radius: 10rpx;
}

.showResultList view:nth-child(odd) {
    background: #f6f6f6;
}

.showResultList view text {
    flex: 1;
    font-size: 30rpx;
    line-height: 74rpx;
    text-align: left;
}

.showResultList view text:nth-child(1) {
    text-align: center;
}

.showResultList view text:nth-child(2) {
    flex: 1.5;
}

.showResultList view text:nth-child(3) {
    font-weight: bold;
}

.showResultList view text.act1 {
    color: #024884;
}

.showResultList view text.act2 {
    color: #e53422;
}

.showResultList view text.act3 {
    color: #653f32;
}

.showResultList view text.act4 {
    color: #2e2a29;
}

.share {
    position: fixed;
    right: 15rpx;
    top: 200rpx;
    width: 140rpx;
    height: 50rpx;
    border: 2rpx solid #e4e4e4;
    border-radius: 80rpx;
    overflow: hidden;
    padding: 0;
    background: none;
    box-shadow: 8rpx 8rpx 15rpx #aaa;
    background: #fff;
}

.share image {
    float: left;
    margin-left: 20rpx;
    margin-top: 8rpx;
    width: 30rpx;
    height: 30rpx;
}

.share text {
    float: left;
    margin-left: 10rpx;
    font-size: 24rpx;
    line-height: 50rpx;
    color: #333;
}

.noeResult {
    margin-top: 20rpx;
    font-size: 32rpx;
    text-align: center;
    color: #666;
}

button::after {
    border: none;
}

.ADS {
    margin: 300rpx auto 10rpx;
    width: 680rpx;
}

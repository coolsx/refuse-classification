page{
    background: #f6f6f6
}
.textInpBox{
    margin: 60rpx auto 0;
    border: 2rpx solid #1aad16;
    width: 650rpx;
    height: 70rpx;
    border-radius: 40rpx;
    overflow: hidden;
    background: #fff
}
.textInpBox image{
    float: left;
    margin: 10rpx 20rpx 0 30rpx;
    width: 50rpx;
    height: 50rpx
}
.textInpBox text{
    float: left;
    font-size: 28rpx;
    line-height: 70rpx;
    color: #999
}

.imgBox{
    width: 700rpx;
    margin: 0 auto;
    background: #fff;
    border-radius: 20rpx;
    overflow: hidden
}
.imgBox image{
    display: block;
    width: 100%;
}
.tip{
    margin: 30rpx 0;
    font-size: 32rpx;
    line-height: 50rpx;
    text-align: center;
    font-weight: bold;
    color: #1aad16
}

.footBg {
    display: block;
    width: 750rpx;
    height: 200rpx;
}

.inputBox {
    position: absolute;
    border-radius: 50%;
    background: #1aad16;
    overflow: hidden;
}


.audioInp{
    left: 50%;
    top: 30rpx;
    margin-left: -80rpx;
    width: 160rpx;
    height: 160rpx;
}

.audioInp image {
    display: block;
    margin: 30rpx auto 0;
    width: 70rpx;
    height: 70rpx;
}

.audioInp text {
    display: block;
    font-size: 20rpx;
    line-height: 1.5;
    color: #fff;
    text-align: center;
}


.showAudioIng {
    position: fixed;
    left: 50%;
    top: 50%;
    margin-left: -150rpx;
    margin-top: -220rpx;
    width: 300rpx;
    height: 380rpx;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 20rpx;
}

.showAudioIng image {
    display: block;
    margin: 25rpx auto;
    width: 250rpx;
    height: 250rpx;
}

.showAudioIng text {
    display: block;
    font-size: 40rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    font-weight: bold;
}
.searchInpBg {
    position: fixed;
    bottom: -200rpx;
    left: 0;
    width: 750rpx;
    height: 200rpx;
}

.searchInpBgHidden{
    bottom: 0;
    transition: 0.5s
}

.searchInpBox {
    position: relative;
    width: 100%;
    height: 100%;
}
.ADS{
    margin: 30rpx auto 20rpx;
    width: 680rpx
}